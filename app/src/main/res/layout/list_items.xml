<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_margin">

    <ImageView
        android:id="@+id/iconImg"
        android:layout_width="@dimen/list_image_size"
        android:layout_height="@dimen/list_image_size"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/activity_margin"
        android:contentDescription="@string/product_image"
        android:src="@drawable/ic_package" />

    <TextView
        android:id="@+id/prdName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iconImg"
        android:textSize="@dimen/list_prdName_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prdPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prdName"
        android:layout_toEndOf="@id/iconImg"
        android:textColor="@android:color/darker_gray" />

    <TextView
        android:id="@+id/prdQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/prdPrice"
        android:layout_toEndOf="@id/iconImg"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/btnSale"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:background="@drawable/button_bg"
        android:clickable="false"
        android:elevation="8dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:text="@string/sell"
        android:textColor="@android:color/white" />

</RelativeLayout>